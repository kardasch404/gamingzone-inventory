generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stock {
  id           String    @id @default(uuid())
  sku          String    // References Product.sku in Catalog service
  warehouseId  String
  
  quantity     Int       @default(0) // Total available
  reserved     Int       @default(0) // Reserved for pending orders
  available    Int       @default(0) // Computed: quantity - reserved
  
  minThreshold Int       @default(5)  // Alert when stock below this
  maxCapacity  Int?      // Maximum stock capacity
  
  version      Int       @default(0) // Optimistic locking
  lastStockAt  DateTime?  // Last time stock was updated
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  movements    StockMovement[]
  reservations StockReservation[]
  
  @@unique([sku, warehouseId])
  @@index([sku])
  @@index([warehouseId])
  @@index([available])
  @@map("stocks")
}

model StockMovement {
  id          String       @id @default(uuid())
  stockId     String
  stock       Stock        @relation(fields: [stockId], references: [id])
  
  type        MovementType
  quantity    Int
  reason      String?
  referenceId String?
  
  beforeQty   Int
  afterQty    Int
  
  performedBy String?
  notes       String?
  
  createdAt   DateTime     @default(now())
  
  @@index([stockId])
  @@index([type])
  @@index([referenceId])
  @@index([createdAt])
  @@map("stock_movements")
}

enum MovementType {
  IN
  OUT
  ADJUSTMENT
  RESERVED
  RELEASED
  DAMAGED
  RETURNED
}

model StockReservation {
  id         String            @id @default(uuid())
  stockId    String
  stock      Stock             @relation(fields: [stockId], references: [id])
  
  orderId    String            @unique
  quantity   Int
  status     ReservationStatus @default(ACTIVE)
  
  reservedAt DateTime          @default(now())
  expiresAt  DateTime
  releasedAt DateTime?
  
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  
  @@index([stockId])
  @@index([orderId])
  @@index([status])
  @@index([expiresAt])
  @@map("stock_reservations")
}

enum ReservationStatus {
  ACTIVE
  FULFILLED
  RELEASED
  EXPIRED
}
